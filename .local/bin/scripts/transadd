#!/bin/sh

directories="/home/andrew/Downloads
/home/andrew/Videos/Movies
/home/andrew/Videos/Series"
dest=$(printf "$directories" | dmenu -p "Choose destination" -i -l 5)
transmission-remote -a "$@" -w "$dest" && notify-send "Torrent added"

