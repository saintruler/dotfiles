#!/bin/sh

getDiskSpace () {
    echo $(df -h | grep "$1$" | awk '{ print $4 }')
}

case $BLOCK_BUTTON in
    1) setsid -f "$TERMINAL" -e ncdu '/home/andrew' ;;
esac

host=$(hostname -s)
if [ "$host" = "laptop1" ]; then
    echo "ðŸ’½$(getDiskSpace "/")"
else
    echo "ðŸ’½$(getDiskSpace "/home")"
fi
