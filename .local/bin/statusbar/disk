#!/bin/sh

getDiskSpace () {
    echo $(df -h | grep "$1$" | awk '{ print $3 "/" $2 }')
}

case $BLOCK_BUTTON in
    1) setsid -f "$TERMINAL" -e ncdu '/home/andrew' ;;
esac

host=$(hostname -s)
if [ "$host" = "laptop1" ]; then
    echo " /: $(getDiskSpace "/")"
else
    echo " /home: $(getDiskSpace "/home")"
fi
